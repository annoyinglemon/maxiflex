<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ph.com.medilink.maxiflexmobileapp.Fragments.MedicalRecord.Fragment_UploadFiles"
    android:orientation="vertical">

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rvUploadedFiles"
        android:layout_marginStart="@dimen/fragment_padding"
        android:layout_marginEnd="@dimen/fragment_padding"
        android:layout_marginTop="@dimen/margin_top"
        android:visibility="visible"/>
        <TextView
            android:id="@+id/tvEmptyList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:text="@string/NoExistingRecords"
            android:textColor="@color/md_grey_400"
            android:textSize="@dimen/tvEmptyLOG"
            android:textStyle="bold" />


</LinearLayout>
