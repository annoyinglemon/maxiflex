<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dl_letterGuarantee"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="end"
    tools:openDrawer="end"
    android:animateLayoutChanges="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="255"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/lvDownloadProgress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="visible"
            android:gravity="center"
            android:background="@color/md_grey_300"
            android:paddingTop="@dimen/progressBar_padding"
            android:paddingBottom="@dimen/progressBar_padding">

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="@dimen/progressBar_size"
                android:layout_height="@dimen/progressBar_size"
                android:indeterminate="true"
                android:layout_marginEnd="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fragment_refresh"
                android:textSize="@dimen/progressBar_text"
                android:textColor="@color/colorPrimaryDark"/>
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvLetterOfGuarantee"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:paddingLeft="@dimen/fragment_padding_left"
            android:paddingRight="@dimen/fragment_padding_right"/>

        <TextView
            android:id="@+id/tvEmptyLOG"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:text="@string/fragment_no_log_found"
            android:textColor="@color/md_grey_400"
            android:textSize="@dimen/tvEmptyLOG"
            android:textStyle="bold"
            android:visibility="gone" />

    </LinearLayout>

    <include
        layout="@layout/drawer_search_and_filter"
        android:layout_width="@dimen/drawer_width_log_search"
        android:layout_height="match_parent"
        android:layout_gravity="end" />
</android.support.v4.widget.DrawerLayout>

