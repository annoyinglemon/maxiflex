<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="ph.com.medilink.maxiflexmobileapp.Fragments.MedicalRecord.Fragment_VitalSign">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingEnd="@dimen/fragment_padding"
        android:paddingStart="@dimen/fragment_padding">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvAllergy"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/tvEmptyList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:text="@string/NoExistingRecords"
            android:textColor="@color/md_grey_400"
            android:textSize="@dimen/tvEmptyLOG"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>