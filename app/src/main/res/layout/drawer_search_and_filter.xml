<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_white_1000">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/drawer_padding_log_search"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/drawer_search_name"
                android:textSize="@dimen/drawer_textView_textSize_log_search"/>
            <EditText
                android:id="@+id/et_search_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/drawer_editText_textSize_log_search"
                android:singleLine="true"
                android:nextFocusDown="@+id/et_search_logNumber"
                android:background="@drawable/custom_edittext_states"
                android:padding="5dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/drawer_search_logNumber"
                android:layout_marginTop="10dp"
                android:textSize="@dimen/drawer_textView_textSize_log_search"/>
            <EditText
                android:id="@+id/et_search_logNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/drawer_editText_textSize_log_search"
                android:singleLine="true"
                android:nextFocusDown="@+id/et_search_dateFrom"
                android:background="@drawable/custom_edittext_states"
                android:padding="5dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="100"
                android:gravity="center_horizontal"
                android:layout_marginTop="10dp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:orientation="vertical"
                    android:layout_marginRight="5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/drawer_search_dateFrom"
                        android:textSize="@dimen/drawer_textView_textSize_log_search"/>
                    <EditText
                        android:id="@+id/et_search_dateFrom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/drawer_editText_textSize_log_search"
                        android:singleLine="true"
                        android:nextFocusRight="@+id/et_search_dateTo"
                        android:focusable="false"
                        android:clickable="true"
                        android:background="@drawable/custom_edittext_states"
                        android:padding="5dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:orientation="vertical"
                    android:layout_marginRight="5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/drawer_search_dateTo"
                        android:textSize="@dimen/drawer_textView_textSize_log_search"/>
                    <EditText
                        android:id="@+id/et_search_dateTo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/drawer_editText_textSize_log_search"
                        android:singleLine="true"
                        android:focusable="false"
                        android:clickable="true"
                        android:background="@drawable/custom_edittext_states"
                        android:padding="5dp"
                        />
                </LinearLayout>
            </LinearLayout>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_pdf_search"
                    android:theme="@style/AppTheme.Button"
                    android:text="@string/drawer_search_search"
                    android:textSize="@dimen/drawer_button_textSize_log_search"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    />
            <Button
                android:id="@+id/lvClearAll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawableLeft="@drawable/ic_clear"
                android:text="Clear Fields"
                android:textSize="@dimen/drawer_button_textSize_log_search"
                android:theme="@style/AppTheme.Button">
            </Button>
        </LinearLayout>
    </ScrollView>


