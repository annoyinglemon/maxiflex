<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingEnd="30dp"
    android:paddingStart="30dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                app:cardElevation="6dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_marginTop="28dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="350dp"
                        android:layout_marginTop="-90dp"
                        android:src="@drawable/maxiflex_logo" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="45dp"
                        android:layout_marginStart="45dp"
                        android:layout_marginTop="-20dp"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/custom_edittext"
                            android:gravity="start"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="52dp"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="-1dp"
                                android:background="@drawable/login_icon_background"
                                android:padding="5dp">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/ic_person" />
                            </LinearLayout>

                            <EditText
                                android:id="@+id/etUsername"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="-1dp"
                                android:background="@drawable/login_edittext_states_username"
                                android:hint="@string/login_username"
                                android:padding="12dp"
                                android:singleLine="true"
                                android:textSize="23sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/custom_edittext2"
                            android:gravity="start"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="52dp"
                                android:layout_height="match_parent"
                                android:background="@drawable/login_icon_background2"
                                android:padding="8dp">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/ic_password" />
                            </LinearLayout>

                            <EditText
                                android:id="@+id/etPassword"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/login_edittext_states_password"
                                android:hint="@string/login_password"
                                android:inputType="textPassword"
                                android:padding="12dp"
                                android:singleLine="true"
                                android:textSize="23sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:orientation="horizontal">

                            <!--FORGOT PASSWORD TEXT-->
                            <TextView
                                android:id="@+id/tvForgotPassword"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:background="?selectableItemBackground"
                                android:clickable="true"
                                android:text="@string/login_forgotPassword"
                                android:textColor="@color/md_blue_500"
                                android:textSize="21sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:background="?selectableItemBackground"
                                android:clickable="true"
                                android:text="  |  "
                                android:textColor="@color/md_blue_500"
                                android:textSize="21sp" />

                            <TextView
                                android:id="@+id/tvCardReplacement"
                                android:layout_width="wrap_content"

                                android:layout_height="wrap_content"
                                android:background="?selectableItemBackground"
                                android:clickable="true"
                                android:text="Card Replacement"
                                android:textColor="@color/md_blue_500"
                                android:textSize="21sp"
                                android:textStyle="bold" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:gravity="center_horizontal"
                            android:orientation="horizontal"
                            android:weightSum="6">
                            <!--<Button-->
                            <!--android:id="@+id/btEnroll"-->
                            <!--android:layout_width="0dp"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:padding="18dp"-->
                            <!--android:textSize="25sp"-->
                            <!--android:layout_weight="2"-->
                            <!--android:text="@string/login_enroll"-->
                            <!--android:drawableStart="@drawable/register"-->
                            <!--android:theme="@style/AppTheme.Button"-->
                            <!--/>-->
                            <!--<Button-->
                            <!--android:id="@+id/btnLocator"-->
                            <!--android:layout_width="0dp"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:padding="18dp"-->
                            <!--android:textSize="25sp"-->
                            <!--android:text="@string/login_locator"-->
                            <!--android:theme="@style/AppTheme.Button"-->
                            <!--android:drawableStart="@drawable/ic_locate"-->
                            <!--android:layout_weight="3"-->
                            <!--/>-->
                            <Button
                                android:id="@+id/btnLocator"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="25dp"
                                android:layout_weight="3"
                                android:padding="15dp"
                                android:text="@string/login_locator"
                                android:textSize="23sp"
                                android:theme="@style/AppTheme.Button" />

                            <Button
                                android:id="@+id/btLogin"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="25dp"
                                android:layout_weight="3"
                                android:padding="15dp"
                                android:text="@string/login_signIn"
                                android:textSize="23sp"
                                android:theme="@style/AppTheme.Button" />
                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="60dp"
                        android:text="@string/login_poweredBy"
                        android:textSize="15sp"
                        android:layout_marginBottom="-2dp"/>

                    <ImageView
                        android:layout_width="190dp"
                        android:layout_height="40dp"
                        android:src="@drawable/medilink" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginTop="8dp"
                android:text="Copyright © 2016 MediLink Network Inc. All Rights Reserved. "
                android:textColor="@color/md_grey_100"
                android:textSize="14sp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>