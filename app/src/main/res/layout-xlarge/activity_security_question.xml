<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="ph.com.medilink.maxiflexmobileapp.Activities.SecurityQuestionAcitivity"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tbSecurity"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="35dp"
            android:paddingLeft="35dp"
            android:paddingRight="35dp"
            android:paddingTop="30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/notice_background"
                android:orientation="vertical"
                android:layout_marginBottom="18dp"
                android:padding="30dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Please answer at least two(2) of the following security questions."
                    android:textSize="@dimen/label_textsize"
                    android:textColor="@color/colorPrimaryDark" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="(Note: This is important for possible card replacements.)"
                    android:textSize="@dimen/label_textsize"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold"
                    android:layout_marginTop="5dp" />
            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="What was your childhood nickname?"
                android:textSize="@dimen/label_textsize"
                android:textColor="@color/textColorSecondary"/>

            <EditText
                android:id="@+id/etQ01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_emr"
                android:textSize="@dimen/main_textsize"
                android:padding="@dimen/main_textpadding"
                android:layout_marginBottom="@dimen/main_text_marginbottom"
                android:textColor="@color/textColorPrimary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="In what city did you meet your spouse/significant other?"
                android:textSize="@dimen/label_textsize"
                android:textColor="@color/textColorSecondary"/>

            <EditText
                android:id="@+id/etQ02"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_emr"
                android:textSize="@dimen/main_textsize"
                android:padding="@dimen/main_textpadding"
                android:layout_marginBottom="@dimen/main_text_marginbottom"
                android:textColor="@color/textColorPrimary"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="What is the name of your favorite childhood friend?"
                android:textSize="@dimen/label_textsize"
                android:textColor="@color/textColorSecondary"/>

            <EditText
                android:id="@+id/etQ03"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_emr"
                android:textSize="@dimen/main_textsize"
                android:padding="@dimen/main_textpadding"
                android:layout_marginBottom="@dimen/main_text_marginbottom"
                android:textColor="@color/textColorPrimary"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="What street did you live on in third grade?"
                android:textSize="@dimen/label_textsize"
                android:textColor="@color/textColorSecondary"/>

            <EditText
                android:id="@+id/etQ04"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_emr"
                android:textSize="@dimen/main_textsize"
                android:padding="@dimen/main_textpadding"
                android:layout_marginBottom="@dimen/main_text_marginbottom"
                android:textColor="@color/textColorPrimary"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="What was your childhood phone number including area code? (eg., 000-000-0000)"
                android:textSize="@dimen/label_textsize"
                android:textColor="@color/textColorSecondary"/>

            <EditText
                android:id="@+id/etQ05"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_emr"
                android:textSize="@dimen/main_textsize"
                android:padding="@dimen/main_textpadding"
                android:layout_marginBottom="@dimen/main_text_marginbottom"
                android:textColor="@color/textColorPrimary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="What is the country of your ultimate dream vacation?"
                android:textSize="@dimen/label_textsize"
                android:textColor="@color/textColorSecondary"/>

            <EditText
                android:id="@+id/etQ06"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_emr"
                android:textSize="@dimen/main_textsize"
                android:padding="@dimen/main_textpadding"
                android:layout_marginBottom="@dimen/main_text_marginbottom"
                android:textColor="@color/textColorPrimary"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="What is the name of your favorite childhood teacher?"
                android:textSize="@dimen/label_textsize"
                android:textColor="@color/textColorSecondary"/>

            <EditText
                android:id="@+id/etQ07"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_emr"
                android:textSize="@dimen/main_textsize"
                android:padding="@dimen/main_textpadding"
                android:layout_marginBottom="@dimen/main_text_marginbottom"
                android:textColor="@color/textColorPrimary"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="What is the street number of the house you grew up in?"
                android:textSize="@dimen/label_textsize"
                android:textColor="@color/textColorSecondary"/>

            <EditText
                android:id="@+id/etQ08"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_emr"
                android:textSize="@dimen/main_textsize"
                android:padding="@dimen/main_textpadding"
                android:layout_marginBottom="@dimen/main_text_marginbottom"
                android:textColor="@color/textColorPrimary"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="What is your favorite movie?"
                android:textSize="@dimen/label_textsize"
                android:textColor="@color/textColorSecondary"/>

            <EditText
                android:id="@+id/etQ09"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_emr"
                android:textSize="@dimen/main_textsize"
                android:padding="@dimen/main_textpadding"
                android:layout_marginBottom="@dimen/main_text_marginbottom"
                android:textColor="@color/textColorPrimary"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Who is your favorite author?"
                android:textSize="@dimen/label_textsize"
                android:textColor="@color/textColorSecondary"/>

            <EditText
                android:id="@+id/etQ10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_emr"
                android:textSize="@dimen/main_textsize"
                android:padding="@dimen/main_textpadding"
                android:layout_marginBottom="@dimen/main_text_marginbottom"
                android:textColor="@color/textColorPrimary"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
